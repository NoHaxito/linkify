generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String    @id
  github_id  Int       @unique
  avatar_url String
  email      String
  username   String
  sessions   Session[]
  links      Link[]
}

model Link {
  id         String         @id
  slug       String         @unique
  url        String
  expires_at DateTime
  user       User?          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id    String?
  settings   LinkSettings[]
}

model LinkSettings {
  link_id  String  @unique
  password String?
  link     Link    @relation(fields: [link_id], references: [id], onDelete: Cascade)
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
